<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.PaymentFragment"
    android:background="@color/black"
    android:paddingHorizontal="@dimen/margin_medium"
    android:orientation="vertical">
    <include layout="@layout/toolbar"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Payment"
                    android:textSize="@dimen/text_size_extremely_large"
                    android:textColor="@color/white"
                    android:textStyle="bold"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right">

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bt_add_card"
                        android:drawableRight="@drawable/ic_add"
                        android:drawablePadding="@dimen/margin_small"
                        android:paddingHorizontal="@dimen/margin_small"
                        android:text="Add a card"
                        android:textAllCaps="false"
                        android:textColor="@color/white" />
                </LinearLayout>

            </LinearLayout>
            <ListView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:listitem="@layout/card_item"
                android:layout_marginTop="@dimen/margin_large"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

            </LinearLayout>
            <Button
                android:layout_width="match_parent"
                android:layout_height="@dimen/btn_height_medium"
                android:text="Add New Payment Method"
                android:textColor="@color/gray4"
                android:textSize="@dimen/text_size_medium"
                android:background="@drawable/custom_button"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:drawableLeft="@drawable/ic_black_add"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>