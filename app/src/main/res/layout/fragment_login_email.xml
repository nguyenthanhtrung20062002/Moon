<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.login.LoginEmailFragment"
    android:background="@drawable/bg_login">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="150dp"
        android:layout_marginHorizontal="@dimen/margin_medium">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="Log In"
            android:textSize="@dimen/text_size_large"
            android:textStyle="bold"/>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#80383A3A"
            android:layout_marginTop="@dimen/margin_small"
            app:cardCornerRadius="12dp">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingHorizontal="@dimen/margin_medium"
                android:paddingVertical="@dimen/margin_large">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/btn_height_medium"
                    android:background="@drawable/custom_white_edit_text"
                    android:hint="Email"
                    android:textSize="@dimen/text_size_medium" />


                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/btn_height_medium"
                    android:text="Continue"
                    android:textColor="@color/gray4"
                    android:textSize="@dimen/text_size_medium"
                    android:background="@drawable/custom_button"
                    android:layout_marginTop="@dimen/margin_medium"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Forgot Password?"
                    android:textColor="@color/accentGreen"
                    android:layout_marginTop="@dimen/margin_medium"
                    android:textSize="14sp"
                    android:layout_gravity="right"/>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/margin_extremely_large">
                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="1dp"
                        android:background="@color/gray4"
                        android:layout_weight="1"
                        android:layout_gravity="center"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Or"
                        android:textColor="@color/gray2"
                        android:textAlignment="center"
                        android:layout_weight="1.5"/>
                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="1dp"
                        android:background="@color/gray4"
                        android:layout_weight="1"
                        android:layout_gravity="center"/>
                </LinearLayout>
                <androidx.appcompat.widget.AppCompatButton
                    android:paddingHorizontal="@dimen/margin_large"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="Login with Facebook"
                    android:textAllCaps="false"
                    android:drawableLeft="@drawable/ic_facebook"
                    android:background="@drawable/bg_button_fb"/>
                <androidx.appcompat.widget.AppCompatButton
                    android:paddingHorizontal="@dimen/margin_large"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="Login with Google"
                    android:textAllCaps="false"
                    android:drawableLeft="@drawable/ic_google"
                    android:background="@drawable/bg_button_fb"
                    android:layout_marginTop="@dimen/margin_medium"/>
                <androidx.appcompat.widget.AppCompatButton
                    android:paddingHorizontal="@dimen/margin_large"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="Login with Apple"
                    android:textAllCaps="false"
                    android:drawableLeft="@drawable/ic_apple"
                    android:background="@drawable/bg_button_fb"
                    android:layout_marginTop="@dimen/margin_medium"/>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginVertical="@dimen/margin_medium">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Don't have an account?"
                        android:textColor="@color/white"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sign up"
                        android:textColor="@color/accentGreen"
                        android:layout_marginHorizontal="5dp"
                        android:textStyle="bold"/>
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</RelativeLayout>