<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.login.LoginPassFragment"
    android:background="@drawable/bg_login">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="150dp"
        android:layout_marginHorizontal="@dimen/margin_medium">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="Log In"
            android:textSize="@dimen/text_size_large"
            android:textStyle="bold"/>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#80383A3A"
            android:layout_marginTop="@dimen/margin_small"
            app:cardCornerRadius="12dp">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingHorizontal="@dimen/margin_medium"
                android:paddingVertical="@dimen/margin_large">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.google.android.material.imageview.ShapeableImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        app:shapeAppearanceOverlay="@style/roundedImageView"
                        android:src="@drawable/ic_launcher_background"
                        android:scaleType="centerCrop"/>
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginHorizontal="@dimen/margin_medium">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="John Doe"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_size_medium"
                            android:textStyle="bold"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="johnabc123@gmail.com"
                            android:textColor="@color/white"/>
                    </LinearLayout>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_checked"
                        android:layout_gravity="center" />
                </LinearLayout>
                <EditText
                    android:layout_marginTop="@dimen/margin_large"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/btn_height_medium"
                    android:background="@drawable/custom_white_edit_text"
                    android:hint="Password"
                    android:drawableRight="@drawable/ic_eye"
                    android:textSize="@dimen/text_size_medium"/>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/btn_height_medium"
                    android:text="Continue"
                    android:textColor="@color/gray4"
                    android:textSize="@dimen/text_size_medium"
                    android:background="@drawable/custom_button"
                    android:layout_marginTop="@dimen/margin_medium"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_marginTop="@dimen/margin_medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Forgot Password?"
                    android:textColor="@color/accentGreen"
                    android:layout_marginHorizontal="5dp"
                    android:textStyle="bold"
                    android:layout_gravity="center"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</RelativeLayout>