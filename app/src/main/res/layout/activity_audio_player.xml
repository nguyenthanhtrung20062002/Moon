<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.AudioPlayerActivity"
    android:background="@color/black">
    <include
        android:id="@+id/toolbar"
        layout="@layout/audio_toolbar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <ImageView
        android:id="@+id/image_bgBook"
        android:layout_width="match_parent"
        android:layout_height="360dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@drawable/book"
        android:scaleType="fitXY"
        android:alpha="0.3"
        android:adjustViewBounds="true"/>
    <ImageView
        android:id="@+id/imageBook"
        android:layout_width="150dp"
        android:layout_height="250dp"
        android:src="@drawable/book"
        app:layout_constraintLeft_toLeftOf="@id/image_bgBook"
        app:layout_constraintRight_toRightOf="@id/image_bgBook"
        app:layout_constraintTop_toTopOf="@id/image_bgBook"
        app:layout_constraintBottom_toBottomOf="@id/image_bgBook"
        android:scaleType="centerCrop"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/image_bgBook"
        android:layout_marginHorizontal="@dimen/margin_medium">
        <TextView
            android:id="@+id/tvTitleBook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Futurama"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="@dimen/text_size_medium"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="@dimen/margin_small"/>
        <TextView
            android:id="@+id/tvAuthorBook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="By Kory Kogon, Suzette Blakemore, and James wood"
            android:textColor="@color/white2"
            android:textSize="@dimen/text_size_small"
            app:layout_constraintTop_toBottomOf="@id/tvTitleBook"
            app:layout_constraintLeft_toLeftOf="@id/tvTitleBook"
            android:layout_marginTop="@dimen/margin_small"/>
        <ImageView
            android:id="@+id/imageTimePlay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/time_play"
            app:layout_constraintTop_toBottomOf="@id/tvAuthorBook"
            android:layout_marginTop="@dimen/margin_extremely_large"
            android:scaleType="fitXY"/>
        <TextView
            android:id="@+id/tvTimeStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0:00"
            android:textColor="@color/white"
            app:layout_constraintLeft_toLeftOf="@id/imageTimePlay"
            app:layout_constraintTop_toBottomOf="@id/imageTimePlay"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-3:22"
            android:textColor="@color/white"
            app:layout_constraintRight_toRightOf="@id/imageTimePlay"
            app:layout_constraintTop_toBottomOf="@id/imageTimePlay"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tvTimeStart"
            android:layout_marginTop="@dimen/margin_medium">
            <ImageButton
                android:id="@+id/ic_previous"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_previous"
                android:background="@color/black"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"/>
            <ImageButton
                android:id="@+id/ic_previous10s"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_previous_10s"
                android:background="@color/black"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toLeftOf="@id/ic_play"
                android:layout_marginRight="@dimen/margin_large"/>
            <ImageButton
                android:id="@+id/ic_play"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_play"
                android:background="@color/black"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>
            <ImageButton
                android:id="@+id/ic_next10s"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_next_10s"
                android:background="@color/black"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/ic_play"
                android:layout_marginLeft="@dimen/margin_large"/>
            <ImageButton
                android:id="@+id/ic_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_next"
                android:background="@color/black"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_moon"
            android:background="@color/black"
            app:layout_constraintTop_toBottomOf="@id/container"
            android:layout_marginTop="@dimen/margin_large"
            app:layout_constraintLeft_toLeftOf="parent"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1.0x"
            android:textColor="@color/white2"
            app:layout_constraintTop_toBottomOf="@id/container"
            android:layout_marginTop="@dimen/margin_large"
            app:layout_constraintRight_toRightOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>